<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_header_layout"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#fff" >

        <ImageView
            android:id="@+id/iv_header_image_item"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/header_add_sub" />

        <EditText
            android:id="@+id/et_result_header_name_item"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_header_image_item"
            android:text="Text"
            android:textColor="#323a45"
            android:textSize="18sp"
            android:inputType="textUri"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/et_result_header_value_item"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Text"
            android:textColor="#323a45"
            android:textSize="18sp"
            android:inputType="textUri"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignBaseline="@+id/et_result_header_name_item"
            android:layout_alignBottom="@+id/et_result_header_name_item"
            android:layout_toRightOf="@+id/et_result_header_name_item"
            android:layout_toEndOf="@+id/et_result_header_name_item" />
    </RelativeLayout>
</LinearLayout>