<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#eeeeee"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="wrap_content">

    <!-- 타이틀바 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Header Creation"
            android:textSize="20sp"
            android:textColor="#fff"
            android:gravity="center"
            android:background="#ff7a00"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </LinearLayout>
    <!-- //end 타이틀바 -->

    <!-- Notice -->
    <LinearLayout
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_add_header_name_item"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Header Name"
                android:textColor="#323a45"
                android:textSize="18sp"
                android:inputType="textUri"
                android:textColorHint="#662E2E2E" />

            <EditText
                android:id="@+id/et_add_header_value_item"
                android:layout_width="135dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="Header Value"
                android:textColor="#323a45"
                android:textSize="18sp"
                android:inputType="textUri"
                android:textColorHint="#662E2E2E" />
        </LinearLayout>
    </LinearLayout>
    <!-- Notice -->

    <View
        android:background="#66bdbdbd"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!-- 닫기 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/bt_add_header_confirm"
            android:text="Confirm"
            android:textSize="15sp"
            android:textColor="#ff7a00"
            android:background="#00000000"
            android:layout_width="150dp"
            android:layout_height="40dp" />

        <View
            android:background="#66bdbdbd"
            android:layout_width="1dp"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/bt_add_header_cancel"
            android:text="Cancel"
            android:textSize="15sp"
            android:textColor="#ff7a00"
            android:background="#00000000"
            android:layout_toRightOf = "@id/bt_add_header_confirm"
            android:layout_width="150dp"
            android:layout_height="40dp"/>
    </LinearLayout>
    <!--// 닫기 버튼 -->
</LinearLayout>