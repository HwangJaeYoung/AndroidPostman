<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:id="@+id/mid"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical" >

            <!-- URL -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_url_image"
                    android:layout_width="18dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/category_ic" />

                <TextView
                    android:id="@+id/tv_url_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/iv_url_image"
                    android:text="URL"
                    android:textColor="#808a99"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/et_url_window"
                    android:layout_width="218dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="13dp"
                    android:text="http://203.253.128.151:7579/mobius-yt"
                    android:textColor="#323a45"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    android:inputType="textUri"/>
            </RelativeLayout>

            <View
                android:id="@+id/tip2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DDE6F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <RelativeLayout
                        android:layout_width="130dp"
                        android:layout_height="49dp" >

                        <ImageView
                            android:id="@+id/iv_header_layout_img"
                            android:layout_width="18dp"
                            android:layout_height="17dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:src="@drawable/heaer_ic" />

                        <TextView
                            android:id="@+id/tv_header_layout_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="17dp"
                            android:layout_toRightOf="@id/iv_header_layout_img"
                            android:text="Header"
                            android:textColor="#808a99"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/iv_header_add"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight = "13dp"
                        android:background="@drawable/header_add_ic" />
                </RelativeLayout>

                <!-- Header List start -->
                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/lv_header_format_list"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:divider="#dde6f2"
                        android:dividerHeight="0.5dp">
                    </ListView>
                </LinearLayout>
                <!-- Header List end -->
            </LinearLayout>

            <View
                android:id="@+id/tip3"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#DDE6F2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="330dp"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="49dp" >

                    <ImageView
                        android:id="@+id/iv_body"
                        android:layout_width="18dp"
                        android:layout_height="17dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:src="@drawable/heaer_ic" />

                    <TextView
                        android:id="@+id/tv_body"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="17dp"
                        android:layout_toRightOf="@id/iv_body"
                        android:text="Body"
                        android:textColor="#808a99"
                        android:textSize="18sp" />

                    <Button
                        android:id="@+id/bt_body_json_format"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:text="JSON"
                        android:textColor="#ffffff"
                        android:layout_marginRight="15dp"
                        android:textSize="12sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/format_button"
                        android:visibility="invisible"/>

                    <Button
                        android:id="@+id/bt_body_xml_format"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/bt_body_json_format"
                        android:text="XML"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:background="@drawable/format_button"
                        android:visibility="invisible"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="19dp"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/et_body_window"
                        android:layout_width="match_parent"
                        android:layout_height="230dp"
                        android:background="#fff"
                        android:gravity="top|left"
                        android:textColor="#323a45"
                        android:textColorHint="#b0bac8" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp">

            <RelativeLayout
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="1dp">

                <Button
                    android:id="@+id/bt_saving_data"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/save_request_button"
                    android:text="Saving Data"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/pg_saving_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="165dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_margin="1dp">

                <onem2m.keti.androidpostman.reuse.widget.SubmitButton
                    android:id="@+id/bt_send_request"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/save_request_button"
                    android:text="Send Request"
                    android:textColor="#fff"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/pg_send_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>